# Environment Variables for V6 Trading System
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# Production Environment Variables
# These override config/production.yaml settings
# =============================================================================

# IB Gateway Connection
PRODUCTION_IB_HOST=127.0.0.1
PRODUCTION_IB_PORT=7497
PRODUCTION_IB_CLIENT_ID=1

# Trading Mode (SAFETY CHECK)
# Set to "false" for production trading, "true" for dry-run mode
PRODUCTION_DRY_RUN=false

# Logging
PRODUCTION_LOG_LEVEL=INFO
PRODUCTION_LOG_FILE=logs/v6_production.log
PRODUCTION_MAX_LOG_SIZE_MB=100
PRODUCTION_LOG_BACKUP_COUNT=10

# Monitoring and Alerting
PRODUCTION_MONITORING_ENABLED=true
# Optional: Slack/Discord webhook for critical alerts
# PRODUCTION_ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PRODUCTION_ALERT_WEBHOOK_URL=

# Backup Configuration
PRODUCTION_BACKUP_ENABLED=true
PRODUCTION_BACKUP_PATH=backups/

# Health Check
PRODUCTION_HEALTH_CHECK_INTERVAL=60

# =============================================================================
# Paper Trading Environment Variables
# =============================================================================

# IB Gateway Connection (Paper Trading Account)
PAPER_TRADING_IB_HOST=127.0.0.1
PAPER_TRADING_IB_PORT=7497
PAPER_TRADING_IB_CLIENT_ID=2

# Safety Limits
PAPER_TRADING_MAX_POSITIONS=5
PAPER_TRADING_MAX_ORDER_SIZE=1
PAPER_TRADING_ALLOWED_SYMBOLS=SPY,QQQ,IWM

# Paper Trading Tracking
PAPER_TRADING_START_DATE=2026-01-27
PAPER_TRADING_STARTING_CAPITAL=100000.0

# =============================================================================
# Development/Paper Trading Environment Variables (Legacy)
# =============================================================================

# Paper Trading (use paper trading account for testing)
# PAPER_IB_HOST=127.0.0.1
# PAPER_IB_PORT=7497
# PAPER_IB_CLIENT_ID=2
# PAPER_DRY_RUN=true

# =============================================================================
# Notes
# =============================================================================
# 1. Variables with PRODUCTION_ prefix override production.yaml config
# 2. Set PRODUCTION_DRY_RUN=false ONLY when ready for live trading
# 3. IB Gateway must be running before starting services
# 4. Monitor logs: journalctl -u v6-trading -f
# 5. Check dashboard: http://localhost:8501
